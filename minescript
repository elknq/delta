    CreateToggle("ULTIMATE ANTI-FLING ðŸ›¡ï¸", "AntiFling")
    CreateToggle("WOOD SHIELD ðŸŒªï¸", "WoodShield")
    CreateToggle("BOX ESP + NAMES ðŸ‘ï¸", "ESP")
