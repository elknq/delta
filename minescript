            else
                -- ØªÙ†Ø¸ÙŠÙ Ø§Ù„Ù€ attachments Ø¹Ù†Ø¯ Ø¥ÙŠÙ‚Ø§Ù Ø§Ù„Ø¯Ø±Ø¹
                for _, data in pairs(woodAttachments) do
